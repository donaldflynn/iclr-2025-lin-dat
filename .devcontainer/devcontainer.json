{
  "name": "PyTorch ML Dev",
  "build": {
    "context": "..",  // Context is project root
    "dockerfile": "Dockerfile"
  },

  // Removed GPU requirement - will use CPU-only PyTorch
  // "runArgs": ["--gpus", "all"],

  // Install your requirements after container is created
  "postCreateCommand": "pip install --no-cache-dir -r requirements.txt",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter"
      ]
    }
  }
}